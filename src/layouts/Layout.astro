---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CarlBot - Sistema de gestión de eventos con WhatsApp" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
   
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
   
    <!-- Iconos de Lucide -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  </head>
  <body class="gradient-background font-sans min-h-screen flex items-center justify-center">
    <div class="content-container">
      <slot />
    </div>
   
    <script>
      // Declarar lucide como una variable global
      declare const lucide: any;
     
      // Inicializar iconos de Lucide
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
 
  body {
    margin: 0;
    padding: 0;
  }
 
  * {
    box-sizing: border-box;
  }

  /* Gradiente similar al de la imagen */
  .gradient-background {
    background: linear-gradient(135deg, 
      #1e40af 0%,     /* Azul profundo */
      #3b82f6 25%,    /* Azul medio */
      #06b6d4 50%,    /* Cyan */
      #10b981 75%,    /* Verde esmeralda */
      #22c55e 100%    /* Verde claro */
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
  }

  /* Animación sutil del gradiente */
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Container para el contenido */
  .content-container {
    width: 100%;
    max-width: 400px;
    padding: 2rem;
    position: relative;
  }

  /* Estilos para formularios y cards similares al diseño */
  .login-card, .card {
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  /* Estilos para inputs */
  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 1px solid rgba(148, 163, 184, 0.3);
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .form-input::placeholder {
    color: rgba(148, 163, 184, 0.7);
  }

  .form-input:focus {
    outline: none;
    border-color: rgba(34, 197, 94, 0.5);
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
    background: rgba(255, 255, 255, 0.15);
  }

  /* Botones con el estilo del gradiente */
  .btn-primary {
    width: 100%;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, #10b981, #22c55e);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #059669, #16a34a);
    transform: translateY(-1px);
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
  }

  /* Avatar/Icon container */
  .avatar-container {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #10b981, #22c55e);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
  }

  /* Texto en color claro para contraste */
  .text-light {
    color: rgba(255, 255, 255, 0.9);
  }

  .text-muted {
    color: rgba(148, 163, 184, 0.8);
  }

  /* Links */
  .link {
    color: #22c55e;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .link:hover {
    color: #16a34a;
  }

  /* Checkbox personalizado */
  .checkbox-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .checkbox {
    appearance: none;
    width: 1rem;
    height: 1rem;
    border: 1px solid rgba(148, 163, 184, 0.5);
    border-radius: 0.25rem;
    background: rgba(255, 255, 255, 0.1);
    cursor: pointer;
    position: relative;
  }

  .checkbox:checked {
    background: #22c55e;
    border-color: #22c55e;
  }

  .checkbox:checked::after {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .content-container {
      padding: 1rem;
    }
    
    .login-card, .card {
      padding: 1.5rem;
    }
  }
</style>